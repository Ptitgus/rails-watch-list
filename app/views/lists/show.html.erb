<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://wallpaperaccess.com/full/4680598.jpg');">
  <div class="container banner-content">
    <h1><%= @list.name %></h1>
  </div>
</div>

<div class="container mt-8">
	<div class="container mt-4">
		<%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-primary px-4" %>
	</div>

	<div class="card-container ">
			<div class="container mt-4">
				<div class="movies-grid">
					<% @list.movies.each do |movie| %>
						<% bookmark = Bookmark.find_by(list_id: @list.id, movie_id: movie.id) %>

						<div class="movie-card">
							<%= image_tag movie.poster_url, class: "movie-img" %>

							<div class="movie-content">
								<h2>
									<%= movie.title %>
									<span class="rating"><%= movie.rating %> ‚≠ê</span>
								</h2>

								<p><%= movie.overview %></p>

								<div class="comment">
									<i class="fa-solid fa-quote-left"></i>
									<%= bookmark.comment %>
								</div>

								<%= link_to "Remove it",
										bookmark_path(bookmark),
										data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
										class: "delete-link" %>
							</div>
						</div>

					<% end %>
				</div>
			</div>
	</div>
</div>
